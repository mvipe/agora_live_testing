<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <FrameLayout
        android:id="@+id/remote_video_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/control_panel_background">

        <Button
            android:id="@+id/btn_mute_audio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mute Audio"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_control_background" />

        <Button
            android:id="@+id/btn_leave_channel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Leave"
            android:background="@drawable/button_end_background" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_channel_info_viewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:text="Watching: "
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:background="@drawable/info_background"
        android:padding="8dp" />

    <TextView
        android:id="@+id/tv_connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:text="Connecting..."
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:background="@drawable/status_background"
        android:padding="8dp" />

</RelativeLayout>