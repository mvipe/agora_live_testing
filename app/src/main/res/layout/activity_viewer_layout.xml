<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Main Video Container -->
    <FrameLayout
        android:id="@+id/remote_video_view_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/stream_info_section"
        android:background="#000000" />

    <!-- Stream Info Section -->
    <LinearLayout
        android:id="@+id/stream_info_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/chat_section"
        android:background="#1a1a1a"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Channel Name and Live Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Live Indicator -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔴 LIVE"
                android:textColor="#ff0000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/live_indicator_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="12dp" />

            <!-- Channel Name -->
            <TextView
                android:id="@+id/tv_channel_info_viewer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Channel Name"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Connection Status -->
            <TextView
                android:id="@+id/tv_connection_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connecting..."
                android:textColor="#ffaa00"
                android:textSize="12sp"
                android:background="@drawable/status_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

        <!-- Stream Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Watching Live Stream"
            android:textColor="#cccccc"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Viewer Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_viewer_count_viewer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👁️ 1 viewer"
                android:textColor="#888888"
                android:textSize="12sp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/tv_stream_quality_viewer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📶 HD"
                android:textColor="#00ff00"
                android:textSize="12sp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/tv_audio_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔊 ON"
                android:textColor="#00ff00"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Chat/Comments Section -->
    <LinearLayout
        android:id="@+id/chat_section"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_above="@+id/viewer_controls_section"
        android:background="#2a2a2a"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💬 Live Chat"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ScrollView
            android:id="@+id/chat_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/chat_messages_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Sample chat messages -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👤 Viewer: Great stream! 👍"
                    android:textColor="#cccccc"
                    android:textSize="12sp"
                    android:paddingVertical="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👤 User123: Hello everyone! 👋"
                    android:textColor="#cccccc"
                    android:textSize="12sp"
                    android:paddingVertical="2dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Viewer Controls -->
    <LinearLayout
        android:id="@+id/viewer_controls_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/control_panel_background"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <!-- Mute Audio Button -->
        <Button
            android:id="@+id/btn_mute_audio"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="🔊 Mute Audio"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:background="@drawable/button_control_background"
            android:layout_marginEnd="8dp" />

        <!-- Fullscreen Button -->
        <Button
            android:id="@+id/btn_fullscreen"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="⛶ Fullscreen"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:background="@drawable/button_control_background"
            android:layout_marginEnd="8dp" />

        <!-- Leave Button -->
        <Button
            android:id="@+id/btn_leave_channel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="✕ Leave"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:background="@drawable/button_end_background" />

    </LinearLayout>

    <!-- Floating Quality Indicator -->
    <TextView
        android:id="@+id/tv_quality_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:text="HD"
        android:textColor="#00ff00"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/quality_indicator_background"
        android:padding="6dp" />

</RelativeLayout>